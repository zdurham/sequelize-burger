<div class="page-header">
    <h1>Eat-Da-Burger</h1>
</div>  
<div class="container">
  
  <div class="row">
    <div class="col-sm-12">
      <div class="panel" id="submit-area">
        <div class="panel-header">
          <h2>Add a burger</h2>
        </div>
        <div class="panel-body">
          <form action="/" method="POST">
          <div class="form-group">
            <textarea type="form-control" name="burger_name" rows="1"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-default" type="submit">Submit!</button>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-lg-6 col-sm-12">
      <div class="panel">
        <div class="panel-header">
          <h2>Burgers to Eat!</h2>
        </div>
        <div class="panel-body" id="uneaten">
        {{#each burgers}}
          {{#unless this.devoured}}          
            <div class="burger well" id="{{this.id}}">
            
              <form action="/{{this.id}}?_method=PUT" method="POST">
                  <span> <img src="/assets/images/burger-icon2.png" id="icon"> | <strong>{{this.burger_name}}</strong></span>
                  <button class="btn btn-sm btn-default pull-right" type="submit" name="devoured" value="true">Devour!</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-6 col-sm-12">
      <div class="panel">
        <div class="panel-header">
          <h2>Devoured Burgers</h2>
        </div>
        <div class="panel-body" id="eaten">
        {{#each burgers}}
          {{#if this.devoured}}
          <div class="burger well" id="{{this.id}}">
            <span> <img src="/assets/images/burger-icon.png" id="icon2"> | <strong>{{this.burger_name}}</strong> </span>
          </div>
          {{/if}}
        {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
